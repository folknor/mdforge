{
	"name": "@mdforge/core",
	"version": "1.0.0",
	"description": "Core library for mdforge - Convert Markdown to PDF",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./browser": {
			"types": "./dist/browser.d.ts",
			"default": "./dist/browser.js"
		}
	},
	"files": [
		"/dist",
		"/themes",
		"/src/data"
	],
	"scripts": {
		"dev": "tsc --watch",
		"prebuild": "node scripts/generate-google-fonts-list.js",
		"build": "tsc",
		"clean": "rm -rf dist"
	},
	"dependencies": {
		"font-list": "^2.0.1",
		"github-slugger": "^2.0.0",
		"highlight.js": "^11.11.1",
		"marked": "^17.0.1",
		"marked-footnote": "^1.4.0",
		"marked-highlight": "^2.2.3",
		"marked-linkify-it": "^3.1.14",
		"marked-smartypants": "^1.1.11",
		"pdf-lib": "^1.17.1",
		"postcss": "^8.5.6",
		"puppeteer": "^24.34.0",
		"transliteration": "^2.6.0",
		"yaml": "^2.8.2"
	},
	"devDependencies": {
		"@types/linkify-it": "^5.0.0",
		"google-font-metadata": "^6.0.7",
		"typescript": "5.9.3"
	},
	"license": "MIT"
}
