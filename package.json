{
	"name": "md-to-pdf",
	"version": "6.0.0",
	"description": "CLI tool for converting Markdown files to PDF.",
	"type": "module",
	"engines": {
		"node": ">=24.0",
		"pnpm": ">=10.0"
	},
	"files": [
		"/dist",
		"markdown.css"
	],
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"dev": "tsc -p tsconfig.build.json --watch",
		"build": "tsc -p tsconfig.build.json",
		"clean": "rm -rf dist",
		"deploy": "pnpm run clean && pnpm run build",
		"lint": "pnpm exec biome check",
		"check": "pnpm exec biome check"
	},
	"bin": {
		"md-to-pdf": "dist/cli.js",
		"md2pdf": "dist/cli.js"
	},
	"author": "Simon Haenisch (https://github.com/simonhaenisch)",
	"license": "MIT",
	"repository": "simonhaenisch/md-to-pdf",
	"homepage": "https://github.com/simonhaenisch/md-to-pdf#readme",
	"dependencies": {
		"arg": "^5.0.2",
		"chokidar": "^5.0.0",
		"get-port": "^7.1.0",
		"get-stdin": "^9.0.0",
		"gray-matter": "^4.0.3",
		"highlight.js": "^11.11.1",
		"listr": "^0.14.3",
		"marked": "^17.0.1",
		"puppeteer": "^24.34.0",
		"semver": "^7.7.3",
		"serve-handler": "^6.1.6"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@types/listr": "0.14.10",
		"@types/semver": "7.7.1",
		"@types/serve-handler": "6.1.4",
		"pdfjs-dist": "5.4.449",
		"ts-node": "10.9.2",
		"typescript": "5.9.3"
	}
}
